<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    app:cardCornerRadius="5dp"
    android:layout_margin="4dp"
    android:background="@color/backgroundColor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/columnListLayer"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/columnImage"
            android:layout_width="match_parent"
            tools:background="@color/colorPrimary3"
            android:layout_height="100dp" />
        <View
            android:background="@color/gray0_5"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/columnTitleText"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textSize="13dp"
            tools:text="asdasd"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <LinearLayout
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical|right"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/columnHeartImg"
                android:src="@drawable/ic_heart"
                android:layout_width="15dp"
                android:layout_height="15dp" />
            <TextView
                android:id="@+id/columnHeartNumTxt"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="12dp"
                android:textColor="@color/black"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/columnCommentImg"
                android:src="@drawable/ic_comment"
                android:layout_width="15dp"
                android:layout_height="15dp" />
            <TextView
                android:id="@+id/columnCommentNumTxt"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/black"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>