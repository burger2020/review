<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.BottomNavPage.Product.ReviewDetailFragment">
    <TextView

        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:layout_gravity="center"
        android:id="@+id/pName"
        tools:text="제품명"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_gravity="center"
        android:id="@+id/pCompany"
        tools:text="제조사"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:layout_margin="5dp"
        android:background="@color/gray0_5"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/userImage"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/userNameText"
                tools:text="유저 이름"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="12dp"
                tools:text="등록 날짜"
                android:id="@+id/reviewDateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/userRatingNum"
            android:layout_weight="1"
            tools:text="0.0"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginEnd="10dp"
            android:gravity="right|center"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <TextView
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:id="@+id/reviewCommentText"
        tools:text="comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_margin="5dp"
        android:background="@color/gray0_5"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/likeImage"
            android:layout_marginStart="8dp"
            android:padding="10dp"
            android:src="@drawable/ic_like"
            android:layout_width="35dp"
            android:layout_height="35dp" />
        <TextView
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/likeNum"
            tools:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/commentNum"
            android:layout_marginStart="20dp"
            android:padding="10dp"
            android:gravity="center"
            tools:text="댓글 0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:background="@color/gray0_5"
        android:layout_width="match_parent"
        android:layout_height="8dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/userCommentList"
        tools:listitem = "@layout/adapter_product_review_list"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/commentText"
            android:imeOptions="actionSend"
            android:inputType="text"
            android:padding="10dp"
            android:background="@drawable/product_rect"
            android:textSize="15dp"
            android:hint="댓글을 써주세요."
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="55dp" />
        <TextView
            android:enabled="false"
            android:id="@+id/sendComment"
            android:background="@drawable/product_rect"
            android:textColor="@color/gray1"
            android:gravity="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="등록"
            android:layout_width="60dp"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>