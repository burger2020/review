<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <Button
        android:visibility="gone"
        android:text="설정"
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:id="@+id/bottomNavPageContainerHome"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/bottomNavPageContainerDashboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/bottomNavPageContainerAlarm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/bottomNavPageContainerMy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />
    </RelativeLayout>
    <com.ittianyu.bottomnavigationviewex.BottomNavigationViewEx
        android:background="@color/white"
        android:id="@+id/bottom_Navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:itemBackground="@color/white"
        app:itemIconTint="@color/bottom_nav_btn"
        app:itemTextColor="@color/bottom_nav_btn"
        app:menu="@menu/navigation" />
</LinearLayout>